import java.util.Scanner;

/*
 * "Algoritmo que peça ao usuário a quantia em dinheiro que tem sobrando e sugira, caso
ele tenha 30 ou mais reais, que vá ao cinema, e se não tiver, fique em casa vendo TV."
 *
 * Autor: Bruno Takazono
 */

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int dinheiro;

        System.out.print("Informe a quantidade de dinheiro sobrando:");
        dinheiro = sc.nextInt();
        if (dinheiro >=30){
                    System.out.println("Vá ao cinema!");
                } else {
                    System.out.println("Fique em casa vendo TV!");
                }
        }
    }
